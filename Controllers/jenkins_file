pipeline {
    agent any
    environment {
        SONARQUBE_SCANNER_HOME = tool(name: 'SonarQube_Scanner')
        SONAR_PROJECT_KEY = 'vitabae controllers'
        GITHUB_REPO = 'https://github.com/simonebinezer/Vitabae_Controllers.git'
        SONAR_HOST_URL = 'http://34.213.46.217:9000'
        SONAR_TOKEN = credentials('Sonar_Token') // Replace with the ID of your SonarQube token
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }

         stage('Build & SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {                 // Matches the SonarQube instance name in Jenkins
                    echo "Starting SonarQube analysis..."
                    withCredentials([string(credentialsId: 'Sonar_Token', variable: 'SONAR_TOKEN')]) {
                        sh """
                            ${SONARQUBE_SCANNER_HOME}/bin/sonar-scanner \
                                -Dsonar.projectKey="${SONAR_PROJECT_KEY}" \
                                -Dsonar.projectName="vitabae controllers" \
                                -Dsonar.projectVersion="1.0" \
                                -Dsonar.sources=. \
                                -Dsonar.host.url="${SONAR_HOST_URL}" \
                                -Dsonar.login=${SONAR_TOKEN}
                        """
                    }
                }
            }
        }
     }

    post {
        always {
            echo 'Pipeline execution completed!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
